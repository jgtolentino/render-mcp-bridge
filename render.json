{
  "services": [
    {
      "type": "web",
      "name": "mcp-bridge",
      "runtime": "node",
      "plan": "free",
      "buildCommand": "npm ci",
      "startCommand": "npm start",
      "healthCheckPath": "/healthz",
      "envVars": [
        {
          "key": "NODE_VERSION",
          "value": "20"
        },
        {
          "key": "NODE_ENV",
          "value": "production"
        }
      ]
    }
  ]
}
